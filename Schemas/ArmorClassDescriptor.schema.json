{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "ArmorClassDescriptor.schema.json",
    "title": "ArmorClassDescriptor",
    "type": "object",
    "required": [
        "base_armor",
        "dexterity_bonus",
        "bonus_limit"
    ],
    "properties": {
        "base_armor": {
            "type": "number"
        },
        "dexterity_bonus": {
            "type": "boolean"
        },
        "bonus_limit": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "number"
                }
            ]
        }
    }
}