{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "RaceEntry.schema.json",
    "title": "RaceEntry",
    "type": "object",
    "required": [
        "descriptor",
        "ability_score_values",
        "ability_score_value_options",
        "starting_proficiencies",
        "starting_proficiency_options",
        "languages",
        "language_options",
        "traits",
        "trait_options",
        "speed",
        "alignment",
        "size",
        "size_description",
        "language_description"
    ],
    "properties": {
        "descriptor": {
            "$ref": "DatabaseEntryDescriptor.schema.json"
        },
        "ability_score_values": {
            "type": "array",
            "items": {
                "$ref": "AbilityScoreValueDescriptor.schema.json"
            }
        },
        "ability_score_value_options": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "ChoicePoolDatabaseEntryReference.schema.json"
                }
            ]
        },
        "starting_proficiencies": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        },
        "starting_proficiency_options": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "ChoicePoolDatabaseEntryReference.schema.json"
                }
            ]
        },
        "languages": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        },
        "language_options": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "ChoicePoolDatabaseEntryReference.schema.json"
                }
            ]
        },
        "traits": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        },
        "trait_options": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "ChoicePoolDatabaseEntryReference.schema.json"
                }
            ]
        },
        "speed": {
            "type": "number"
        },
        "alignment": {
            "type": "string"
        },
        "size": {
            "$ref": "SizeDescriptor.schema.json"
        },
        "size_description": {
            "type": "string"
        },
        "language_description": {
            "type": "string"
        }
    }
}