{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "EquipmentEntry.schema.json",
    "title": "EquipmentEntry",
    "type": "object",
    "required": [
        "descriptor",
        "cost",
        "equipment_category",
        "category_specific"
    ],
    "properties": {
        "descriptor": {
            "$ref": "DatabaseEntryDescriptor.schema.json"
        },
        "cost": {
            "$ref": "CurrencyValue.schema.json"
        },
        "equipment_category": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "category_specific": {
            "oneOf": [
                {
                    "if": {
                        "properties": {
                            "equipment_category": {
                                "properties": {
                                    "name": {
                                        "const": "Weapon"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "$ref": "WeaponEquipmentDescriptor.schema.json"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "equipment_category": {
                                "properties": {
                                    "name": {
                                        "const": "Armor"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "$ref": "ArmorEquipmentDescriptor.schema.json"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "equipment_category": {
                                "properties": {
                                    "name": {
                                        "const": "Tools"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "$ref": "ToolEquipmentDescriptor.schema.json"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "equipment_category": {
                                "properties": {
                                    "name": {
                                        "const": "Mounts and Vehicles"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "$ref": "MountEquipmentDescriptor.schema.json"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "equipment_category": {
                                "properties": {
                                    "name": {
                                        "const": "Adventuring Gear"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "$ref": "AdventuringGearEquipmentDescriptor.schema.json"
                            }
                        }
                    }
                }
            ]
        }
    }
}