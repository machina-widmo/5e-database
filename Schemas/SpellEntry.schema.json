{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "SpellEntry.schema.json",
    "title": "SpellEntry",
    "type": "object",
    "required": [
        "descriptor",
        "higher_levels",
        "page",
        "range",
        "components",
        "material",
        "requires_ritual",
        "requires_concentration",
        "duration",
        "casting_time",
        "level",
        "school",
        "classes",
        "subclasses"
    ],
    "properties": {
        "descriptor": {
            "$ref": "DatabaseEntryDescriptor.schema.json"
        },
        "higher_levels": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "(List.schema.json"
                }
            ]
        },
        "page": {
            "type": "string"
        },
        "range": {
            "type": "string"
        },
        "components": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "material": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "requires_ritual": {
            "type": "boolean"
        },
        "requires_concentration": {
            "type": "boolean"
        },
        "duration": {
            "type": "string"
        },
        "casting_time": {
            "type": "string"
        },
        "level": {
            "type": "number"
        },
        "school": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "classes": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        },
        "subclasses": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        }
    }
}