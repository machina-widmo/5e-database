{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "ArmorEquipmentDescriptor.schema.json",
    "title": "ArmorEquipmentDescriptor",
    "type": "object",
    "required": [
        "weight",
        "armor_category",
        "armor_category_specific",
        "armor_class",
        "strength_minimum",
        "stealth_disadvantage"
    ],
    "properties": {
        "weight": {
            "$ref": "MeasuredUnit.schema.json"
        },
        "armor_category": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "armor_category_specific": {
            "oneOf": [
                {
                    "if": {
                        "properties": {
                            "armor_category": {
                                "properties": {
                                    "name": {
                                        "const": "Light Armor"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "armor_category": {
                                "properties": {
                                    "name": {
                                        "const": "Medium Armor"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "armor_category": {
                                "properties": {
                                    "name": {
                                        "const": "Heavy Armor"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "armor_category": {
                                "properties": {
                                    "name": {
                                        "const": "Shields"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                }
            ]
        },
        "armor_class": {
            "$ref": "ArmorClassDescriptor.schema.json"
        },
        "strength_minimum": {
            "type": "number"
        },
        "stealth_disadvantage": {
            "type": "boolean"
        }
    }
}