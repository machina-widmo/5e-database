{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "Schemas/DatabaseSchemas/5e-SRD-Backgrounds.schema.json",
    "type": "array",
    "items": {
        "title": "BackgroundEntry",
        "type": "object",
        "required": [
            "descriptor",
            "skills",
            "suggested_origins",
            "languages",
            "language_choices",
            "tools",
            "tool_choices",
            "feature",
            "feature_choices",
            "equipment",
            "currency"
        ],
        "properties": {
            "descriptor": {
                "$ref": "Schemas/SupportingSchemas/DatabaseEntryDescriptor.schema.json"
            },
            "skills": {
                "type": "array",
                "items": {
                    "$ref": "Schemas/SupportingSchemas/DatabaseEntryReference.schema.json"
                }
            },
            "suggested_origins": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "languages": {
                "type": "array",
                "items": {
                    "$ref": "Schemas/SupportingSchemas/DatabaseEntryReference.schema.json"
                }
            },
            "language_choices": {
                "oneOf": [
                    {
                        "type": "null"
                    },
                    {
                        "$ref": "Schemas/SupportingSchemas/ChoicePoolDatabaseEntryReference.schema.json"
                    }
                ]
            },
            "tools": {
                "type": "array",
                "items": {
                    "$ref": "Schemas/SupportingSchemas/DatabaseEntryReference.schema.json"
                }
            },
            "tool_choices": {
                "oneOf": [
                    {
                        "type": "null"
                    },
                    {
                        "$ref": "Schemas/SupportingSchemas/ChoicePoolDatabaseEntryReference.schema.json"
                    }
                ]
            },
            "feature": {
                "oneOf": [
                    {
                        "type": "null"
                    },
                    {
                        "$ref": "Schemas/SupportingSchemas/DatabaseEntryReference.schema.json"
                    }
                ]
            },
            "feature_choices": {
                "oneOf": [
                    {
                        "type": "null"
                    },
                    {
                        "$ref": "Schemas/SupportingSchemas/ChoicePoolDatabaseEntryReference.schema.json"
                    }
                ]
            },
            "equipment": {
                "type": "array",
                "items": {
                    "$ref": "Schemas/SupportingSchemas/InventoryItemDescriptor.schema.json"
                }
            },
            "currency": {
                "type": "array",
                "items": {
                    "$ref": "Schemas/SupportingSchemas/CurrencyValue.schema.json"
                }
            }
        }
    }
}