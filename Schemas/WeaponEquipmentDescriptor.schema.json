{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "WeaponEquipmentDescriptor.schema.json",
    "title": "WeaponEquipmentDescriptor",
    "type": "object",
    "required": [
        "weight",
        "weapon_category",
        "weapon_category_specific",
        "weapon_range",
        "category_range",
        "damage",
        "range",
        "properties"
    ],
    "properties": {
        "weight": {
            "$ref": "MeasuredUnit.schema.json"
        },
        "weapon_category": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "weapon_category_specific": {
            "oneOf": [
                {
                    "if": {
                        "properties": {
                            "weapon_category": {
                                "properties": {
                                    "name": {
                                        "const": "Simple Weapons"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "weapon_category": {
                                "properties": {
                                    "name": {
                                        "const": "Martial Weapons"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                }
            ]
        },
        "weapon_range": {
            "type": "string"
        },
        "category_range": {
            "type": "string"
        },
        "damage": {
            "$ref": "DamageDescriptor.schema.json"
        },
        "range": {
            "$ref": "RangeDescriptor.schema.json"
        },
        "properties": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        }
    }
}