{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "MountEquipmentDescriptor.schema.json",
    "title": "MountEquipmentDescriptor",
    "type": "object",
    "required": [
        "mount_category",
        "mount_specific"
    ],
    "properties": {
        "mount_category": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "mount_specific": {
            "oneOf": [
                {
                    "if": {
                        "properties": {
                            "mount_category": {
                                "properties": {
                                    "name": {
                                        "const": "Mounts and Other Animals"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "$ref": "LandAndAirMountEquipmentDescriptor.schema.json"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "mount_category": {
                                "properties": {
                                    "name": {
                                        "const": "Waterborne Vehicles"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "$ref": "WaterborneMountEquipmentDescriptor.schema.json"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "mount_category": {
                                "properties": {
                                    "name": {
                                        "const": "Tack, Harness, and Drawn Vehicles"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "$ref": "MountAccessoryEquipmentDescriptor.schema.json"
                            }
                        }
                    }
                }
            ]
        }
    }
}