{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "SubclassEntry.schema.json",
    "title": "SubclassEntry",
    "type": "object",
    "required": [
        "descriptor",
        "class",
        "subclass_flavor",
        "features"
    ],
    "properties": {
        "descriptor": {
            "$ref": "DatabaseEntryDescriptor.schema.json"
        },
        "class": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "subclass_flavor": {
            "type": "string"
        },
        "features": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        }
    }
}