{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "TraitEntry.schema.json",
    "title": "TraitEntry",
    "type": "object",
    "required": [
        "descriptor",
        "races",
        "subraces"
    ],
    "properties": {
        "descriptor": {
            "$ref": "DatabaseEntryDescriptor.schema.json"
        },
        "races": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        },
        "subraces": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        }
    }
}