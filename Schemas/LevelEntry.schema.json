{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "LevelEntry.schema.json",
    "title": "LevelEntry",
    "type": "object",
    "required": [
        "descriptor",
        "level",
        "class",
        "class_specific",
        "subclass",
        "ability_score_bonus",
        "proficiency_bonus",
        "features",
        "feature_choices",
        "spellcasting"
