{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "ClassEntry.schema.json",
    "title": "ClassEntry",
    "type": "object",
    "required": [
        "descriptor",
        "hit_die",
        "proficiency_choices",
        "proficiencies",
        "saving_throws",
        "starting_equipment",
        "class_levels",
        "subclasses",
        "spellcasting"
    ],
    "properties": {
        "descriptor": {
            "$ref": "DatabaseEntryDescriptor.schema.json"
        },
        "hit_die": {
            "type": "number"
        },
        "proficiency_choices": {
            "type": "array",
            "items": {
                "$ref": "ChoicePoolDatabaseEntryReference.schema.json"
            }
        },
        "proficiencies": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        },
        "saving_throws": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        },
        "starting_equipment": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "class_levels": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "subclasses": {
            "type": "array",
            "items": {
                "$ref": "DatabaseEntryReference.schema.json"
            }
        },
        "spellcasting": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "DatabaseEntryReference.schema.json"
                }
            ]
        }
    }
}