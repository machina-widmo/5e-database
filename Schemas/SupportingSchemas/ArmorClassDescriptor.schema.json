{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "Schemas/SupportingSchemas/ArmorClassDescriptor.schema.json",
    "title": "ArmorClassDescriptor",
    "type": "object",
    "required": [
        "base",
        "dex_bonus",
        "max_bonus"
    ],
    "properties": {
        "base": {
            "type": "number"
        },
        "dex_bonus": {
            "type": "boolean"
        },
        "max_bonus": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "number"
                }
            ]
        }
    }
}