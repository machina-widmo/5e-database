{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "SpellcastingEntry.schema.json",
    "title": "SpellcastingEntry",
    "type": "object",
    "required": [
        "descriptor",
        "class",
        "level",
        "spellcasting_ability",
        "info"
    ],
    "properties": {
        "descriptor": {
            "$ref": "DatabaseEntryDescriptor.schema.json"
        },
        "class": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "level": {
            "type": "number"
        },
        "spellcasting_ability": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "info": {
            "type": "array",
            "items": {
                "$ref": "InfoDescriptor.schema.json"
            }
        }
    }
}