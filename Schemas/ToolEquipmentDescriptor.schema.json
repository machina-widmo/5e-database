{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "ToolEquipmentDescriptor.schema.json",
    "title": "ToolEquipmentDescriptor",
    "type": "object",
    "required": [
        "weight",
        "tool_category",
        "tool_category_specific"
    ],
    "properties": {
        "weight": {
            "$ref": "MeasuredUnit.schema.json"
        },
        "tool_category": {
            "$ref": "DatabaseEntryReference.schema.json"
        },
        "tool_category_specific": {
            "oneOf": [
                {
                    "if": {
                        "properties": {
                            "tool_category": {
                                "properties": {
                                    "name": {
                                        "const": "Artisan's Tools"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "tool_category": {
                                "properties": {
                                    "name": {
                                        "const": "Gaming Sets"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "tool_category": {
                                "properties": {
                                    "name": {
                                        "const": "Musical Instruments"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "tool_category": {
                                "properties": {
                                    "name": {
                                        "const": "Other Tools"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "category_specific": {
                                "type": "null"
                            }
                        }
                    }
                }
            ]
        }
    }
}